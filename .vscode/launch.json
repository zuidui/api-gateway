{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "api-gateway-debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app/src",
                    "remoteRoot": "/workspace/app/src"
                }
            ]
        }
    ]
}
